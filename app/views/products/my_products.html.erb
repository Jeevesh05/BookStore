<!-- app/views/products/index.html.erb -->
<div class="d-flex justify-content-center fixed">
    <%= button_to "Add new Product", new_product_path, method: :get, class: "btn btn-primary mt-3 ml-3" %>
</div>
<h3>Your Products </h3>

<div class="container">
  <% @products.each_slice(3) do |products_row| %>
    <div class="row">
      <% products_row.each do |product| %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <%#if current_seller.id == product.seller_id %>  
              <% if product.image.attached? %>
                <%= image_tag product.image.variant(:thumb), class: "card-img-top" %>
              <% end %>

              <div class="card-body">
                <%= link_to product.name, product, class: "card-title" %>
                <p class="card-text"><%= product.price %></p>
                <p class="card-text">sold by <%= product.seller_id %></p>
              </div>

              <div class="card-footer">
                <%if seller_signed_in? && current_seller.id == product.seller_id %>
                  <div class="d-flex justify-content-evenly ml-3">
                    <div class="mr-3">  
                      <%= button_to "Edit", edit_product_path(@products), method: :get, class: "btn btn-primary" %>
                    </div>
                    <%= button_to "Delete", product_path(@products),
                            method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
                  </div>
                <%end%>
              </div>
            </div>
          <%#end%>  
        </div>
      <% end %>
    </div>
  <% end %>
</div>
