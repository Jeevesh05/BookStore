<!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Order Detail</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Checkout</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Checkout Start -->
    <div class="container-fluid pt-5">
       <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        <% @order.order_items.each do |order_item| %>
                        <div class="d-flex justify-content-between">
                            <p><%= order_item.product.name %></p>
                            <p><%= order_item.quantity %></p>
                            <p><%= order_item.product.price %></p>
                        </div>
                        <%end%>
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium"><%= @ordered_item_price %></h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">Free</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Tax</h6>
                            <h6 class="font-weight-medium"><%= @tax%></h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Discount</h6>
                            <h6 class="font-weight-medium"><%= @discount%></h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold"><%= @total_bill%></h5>
                        </div>
                    </div>
                </div>
    
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4" id="shipping-address">
                    <h4 class="font-weight-semi-bold mb-4">Shipping Address</h4>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label><%= current_user.name %></label>
                        </div>
                        <div class="col-md-6 form-group">
                            <label><%= current_user.address %></label>
                        </div>
                        <div class="col-md-6 form-group">
                            <label><%= current_user.phone_number %></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                 <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Delivery Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Ordered Date</h6>
                            <h6 class="font-weight-medium">  <%= @order.created_at.strftime("%Y-%m-%d")%></h6>
                            <h6 class="font-weight-medium"> <%= @order.created_at.strftime("%A") %></h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Delivery Date</h6>
                            <h6 class="font-weight-medium"><%= @estimate_delivery_date.strftime("%Y-%m-%d") %></h6>
                            <h6 class="font-weight-medium"><%= @estimate_delivery_date.strftime("%A") %></h6>
                        </div>
                        <div class="card-footer border-secondary bg-transparent">
                        <h6> Delivery Status: <%= @order.status%></h6>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
    <!-- Checkout End -->

